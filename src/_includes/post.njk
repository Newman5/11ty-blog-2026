{# 
  Post Template
  This template is used for regular blog posts
  It extends (inherits from) the base.njk template
#}

{# Tell Nunjucks we want to use base.njk as our layout #}
{% extends "base.njk" %}

{# Set the page title - this fills the "title" block in base.njk #}
{% block title %}{{ title }} - 11ty Blog 2026{% endblock %}

{# Main content for this post - fills the "content" block in base.njk #}
{% block content %}

<article>
  {# Post header with title and metadata #}
  <header>
    <h1>{{ title }}</h1>
    <p>
      <time datetime="{{ date }}">{{ date | readableDate }}</time>
      
      {# Display tags if they exist #}
      {% if tags %}
        &nbsp;·&nbsp;
        {% for tag in tags %}
          {# Don't show the "posts" tag - it's automatic #}
          {% if tag != "posts" %}
            <a href="/tags/{{ tag }}/">#{{ tag }}</a>
          {% endif %}
        {% endfor %}
      {% endif %}
    </p>
  </header>
  
  {# The actual post content (written in Markdown) #}
  <div>
    {{ content | safe }}
  </div>
</article>

{# Navigation link back to all posts #}
<p style="margin-top: 40px;">
  <a href="/posts/">← Back to all posts</a>
</p>

{% endblock %}
